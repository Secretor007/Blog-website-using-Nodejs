<%- include("partials/header.ejs") %>
<div class="container home">
  <img class="back-img" src="/images/back.jpg" alt="" />
  <h1 class="centered"><span>Pratham</span>'s Blogs</h1>
</div>
<div class="container view-blogs">
  <ul>
    <% if (!locals.data){ %>
      <li>
        <div class="post">
          <h2>Nothing to show</h2>
          <h3></h3>
        </div>
      </li>
      <hr />
    <% } else { %>
      
      <% for (i=0;i<data.length;i++) {%>
        <li>
          <div class="post">
            <a href="/view-post?id=<%= i %>" class="view-post">
              <h2><%= data[i].title %></h2>
              <h3><%= data[i].subtitle %></h3>
              <h4><em>Posted by <%= data[i].author %> on <%= data[i].date %></em></h4>
            </a>
            <span>
              <a href="/delete?id=<%= i %>">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  fill="currentColor"
                  class="bi bi-trash"
                  viewBox="0 0 16 16"
                >
                  <path
                    d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"
                  />
                  <path
                    d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"
                  />
                </svg>
                Delete
              </a>
            </span>
          </div>
        </li>
        <hr />
      <% } %>
       
    <% } %>
  </ul>
</div>
<div class="create">
  <a href="/new-post">
    <button type="button" class="btn btn-outline-light">Create Post</button></a
  >
</div>
<%- include("partials/footer.ejs") %>
